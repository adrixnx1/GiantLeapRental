@page
@model GiantLeapRental.Pages.DepositModel

<div class="container mt-5">
    <h2 class="mb-4">Secure Your Booking</h2>

    <p>To confirm your rental, please pay a deposit of <strong>$@Model.DepositAmount</strong>.</p>

    <form method="post" action="https://buy.stripe.com/test_4gw4g9bDtd1u4YAcMM">
        <!-- Test Stripe link -->
        <button type="submit" class="btn btn-success btn-lg mt-3">
            Pay with Stripe
        </button>
    </form>

    <p class="text-muted mt-4">
        This deposit will go toward your total rental cost. You will receive a confirmation email after payment.
    </p>

    <a href="/" class="btn btn-outline-secondary mt-3">Back to Home</a>
</div>
