@page
@model GiantLeapRental.Pages.ConfirmationModel

@{
    ViewData["Title"] = "Booking Confirmation";
}

<h2>🎉 Booking Confirmed!</h2>

@if (Model.Booking != null)
{
    <div class="card p-4 shadow-sm">
        <h4>@Model.Booking.RentalName</h4>

        <p><strong>Date:</strong> @Model.Booking.RentalDate.ToShortDateString()</p>
        <p><strong>Duration:</strong> @(Model.Booking.IsTwoDays ? "2 Days" : "1 Day")</p>
        <p><strong>Purpose:</strong> @Model.Booking.Purpose</p>
        <p><strong>Email:</strong> @Model.Booking.UserEmail</p>

        <hr />

        @if (!Model.Booking.DepositPaid)
        {
            <a href="/Checkout?bookingId=@Model.Booking.Id" class="btn btn-success">
                💳 Pay $75 Deposit Now
            </a>
        }
        else
        {
            <span class="badge bg-success">Deposit Paid</span>
        }
    </div>
}
else
{
    <div class="alert alert-danger">
        Booking not found.
    </div>
}
