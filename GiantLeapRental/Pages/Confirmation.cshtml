@page
@model GiantLeapRental.Pages.ConfirmationModel
@{
    ViewData["Title"] = "Booking Confirmation";
}

<div class="container mt-5 text-center">
    <h2 class="mb-3 text-success">🎉 Booking Confirmed!</h2>

    <p class="lead">Thank you for booking <strong>@Model.RentalName</strong>!</p>

    <ul class="list-group list-group-flush mb-4">
        <li class="list-group-item">
            <strong>Date:</strong> @Model.RentalDate
        </li>
        <li class="list-group-item">
            <strong>Duration:</strong> @(Model.IsTwoDays ? "2 Days" : "1 Day")
        </li>
        <li class="list-group-item">
            <strong>Purpose:</strong> @Model.Purpose
        </li>
    </ul>

    <a href="/Checkout?bookingId=@TempData["BookingId"]" class="btn btn-lg btn-success shadow-sm">
        💳 Pay $75 Deposit Now
    </a>

    <p class="text-muted mt-3">A deposit is required to hold your booking.</p>
</div>
