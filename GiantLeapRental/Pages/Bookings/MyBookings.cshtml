@page
@model GiantLeapRental.Pages.Bookings.MyBookingsModel
@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager

<h2>Your Bookings</h2>

@if (Model.UserBookings != null && Model.UserBookings.Count > 0)
{
    <table class="table table-bordered mt-4">
        <thead>
            <tr>
                <th>Rental</th>
                <th>Date</th>
                <th>Purpose</th>
                <th>Duration</th>
                <th>Deposit Paid</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var booking in Model.UserBookings)
            {
                <tr>
                    <td>@booking.RentalName</td>
                    <td>@booking.RentalDate.ToShortDateString()</td>
                    <td>@booking.Purpose</td>
                    <td>@(booking.IsTwoDays ? "2 Days" : "1 Day")</td>
                    <td>@(booking.DepositPaid ? "Yes" : "No")</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>You haven’t booked anything yet.</p>
}

