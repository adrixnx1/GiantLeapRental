@page
@model GiantLeapRental.Pages.Admin.AddRentalModel
@{
    ViewData["Title"] = "Add New Rental";
}

<h2>Add New Rental Item</h2>

<form method="post" class="mt-4">
    <div class="mb-3">
        <label class="form-label">Name</label>
        <input asp-for="NewRental.Name" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Description</label>
        <textarea asp-for="NewRental.Description" class="form-control"></textarea>
    </div>

    <div class="mb-3">
        <label class="form-label">Category</label>
        <select asp-for="NewRental.Category" class="form-control">
            <option>Bounce House</option>
            <option>Water Slide</option>
            <option>Obstacle Course</option>
            <option>Combo</option>
        </select>
    </div>

    <div class="mb-3">
        <label class="form-label">Image URL</label>
        <input asp-for="NewRental.ImageUrl" class="form-control" />
    </div>

    <div class="mb-3">
        <label class="form-label">Price Per Day</label>
        <input asp-for="NewRental.PricePerDay" type="number" step="0.01" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Add Rental</button>
</form>
